@using CountryCityApp.Models;
@model IEnumerable<CountryCityApp.Models.Country>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

@using (Html.BeginForm())
{
    <div>
        @Html.RadioButton("searchBy", "Name", true)
        @Html.Label("Country Name")
        @Html.Editor("searchCountryTextBox")
    </div>

    <div>
        @Html.RadioButton("searchBy", "List")
        @Html.Label("Country Name")
        @Html.DropDownList("searchCountryList") 
    </div>
    

    <input type="submit" value="Search">
}

<hr />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.About)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfCities)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cities.Count)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CountryId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CountryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CountryId })
            </td>
        </tr>
    }

</table>

